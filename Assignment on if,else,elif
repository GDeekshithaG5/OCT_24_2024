#Assgnment4
'''
from tkinter import*
from tkinter import messagebox


window=Tk()
window.geometry("500x400")
window.config(bg="white")
window.title("Restaurant Order Management System")

def check():
    data=int(e1.get())
    membership=int(e2.get())
    if(data>100 and membership == 1):
        messagebox.showinfo("STATUS","10% discount")
    elif(data>100 and membership == 0):
        messagebox.showinfo("STATUS","5% discount")
    else:
        messagebox.showinfo("STATUS","No discount")



#label1
l1=Label(window,text="Data",font=40)
l1.grid(row=0,column=0)
#entrybox1
e1=Entry(window)
e1.grid(row=0,column=1)
#label2
l2=Label(window,text="membership",font=40)
l2.grid(row=1,column=0)
#e2
e2=Entry(window)
e2.grid(row=1,column=1)
#button
b1=Button(window,text="ENTER",command=check)
b1.grid(row=2,column=2)

window.mainloop()
'''

#Assignment 5
'''
from tkinter import*
from tkinter import messagebox

window=Tk()
window.geometry("500x400")
window.config(bg="white")
window.title("Grade Calculator for Students")

def check():
    data=int(e1.get())
    if (data >= 90):
        messagebox.showinfo("STATUS","GRADE A")
    elif (80<=data<90):
        messagebox.showinfo("STATUS","GRADE B")
    elif (70<=data<80):
        messagebox.showinfo("STATUS","GRADE C")
    elif (60<=data<70):
        messagebox.showinfo("STATUS","GRADE D")
    else:
        messagebox.showinfo("STATUS","FAIL")


#label1
l1=Label(window,text="Data",font=40)
l1.grid(row=0,column=0)
#entrybox1
e1=Entry(window)
e1.grid(row=0,column=1)
#button
b1=Button(window,text="ENTER",command=check)
b1.grid(row=1,column=1)

window.mainloop()
'''

#Assignment 6
'''
from tkinter import*
from tkinter import messagebox


window=Tk()
window.geometry("500x400")
window.config(bg="white")
window.title("Traffic Light Simulation")

def check():
    data=str(e1.get())
    if(data == Red):
        messagebox.showinfo("STATUS","Stop")
    elif(data == Yellow):
        messagebox.showinfo("STATUS","Caution")
    elif(data == Green):
        messagebox.showinfo("STATUS","Go")


#label1
l1=Label(window,text="Data",font=40)
l1.grid(row=0,column=0)
#entrybox1
e1=Entry(window)
e1.grid(row=0,column=1)
#button
b1=Button(window,text="ENTER",command=check)
b1.grid(row=2,column=2)

window.mainloop()
'''


#Assignment 7
'''
from tkinter import*
from tkinter import messagebox


window=Tk()
window.geometry("500x400")
window.config(bg="white")
window.title("BMI Calculator")

def check():
    data=float(e1.get())
    if(data<18.5):
        messagebox.showinfo("STATUS","Under Weight")
    elif(18.5<=data<24.5):
        messagebox.showinfo("STATUS","Normal Weight")
    elif(25<=data<29.5):
        messagebox.showinfo("STATUS","Over Weight")
    elif (data>=30):
        messagebox.showinfo("STATUS","Obesity")

#label1
l1=Label(window,text="Data",font=40)
l1.grid(row=0,column=0)
#entrybox1
e1=Entry(window)
e1.grid(row=0,column=1)
#button
b1=Button(window,text="ENTER",command=check)
b1.grid(row=2,column=2)

window.mainloop()
'''
#Assignment 8
'''
from tkinter import*
from tkinter import messagebox


window=Tk()
window.geometry("500x400")
window.config(bg="white")
window.title("BMI Calculator")

def check():
    data=float(e1.get())
    if (data<18):
        messagebox.showinfo("STATUS","8 per ticket")
    elif (18 <= data< 60):
        messagebox.showinfo("STATUS","12 per ticket")
    elif (data >= 60):
        messagebox.showinfo("STATUS","10 per ticket")
    else:
        messagebox.showinfo("STATUS","There is no ticket")

#label1
l1=Label(window,text="Data",font=40)
l1.grid(row=0,column=0)
#entrybox1
e1=Entry(window)
e1.grid(row=0,column=1)
#button
b1=Button(window,text="ENTER",command=check)
b1.grid(row=2,column=2)

window.mainloop()
